{
    "name": "ยง6Ambience",
    "description": "Occasionally play ambient sounds.",
    "hidden": true,

    "type": "origins:multiple",

    "heartbeat": {
        "type": "origins:action_over_time",
        "interval": 100,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:or",
                "conditions": [
                    {
                        "type": "origins:on_block",
                        "block_condition": {
                            "type": "origins:block",
                            "block": "minecraft:sculk"
                        }
                    },
                    {
                        "type": "origins:in_block",
                        "block_condition": {
                            "type": "origins:block",
                            "block": "minecraft:sculk"
                        }
                    }
                ]
            },
            "if_action": {
                "type": "origins:choice",
                "actions": [
                    {
                        "element": {
                            "type": "origins:play_sound",
                            "sound": "minecraft:entity.warden.heartbeat",
                            "volume": 0.5
                        },
                        "weight": 75
                    },
                    {
                        "element": {
                            "type": "origins:nothing"
                        },
                        "weight": 25
                    }
                ]
            },
            "else_action": {
                "type": "origins:choice",
                "actions": [
                    {
                        "element": {
                            "type": "origins:play_sound",
                            "sound": "minecraft:entity.warden.heartbeat",
                            "volume": 0.5
                        },
                        "weight": 25
                    },
                    {
                        "element": {
                            "type": "origins:nothing"
                        },
                        "weight": 75
                    }
                ]
            }
        }
    },

    "anger": {
        "type": "origins:action_over_time",
        "interval": 120,
        "entity_action": {
            "type": "origins:choice",
            "actions": [
                {
                    "element": {
                        "type": "origins:nothing"
                    },
                    "weight": 60
                },
                {
                    "element": {
                        "type": "origins:if_else_list",
                        "actions": [
                            {
                                "condition": {
                                    "type": "origins:relative_health",
                                    "comparison": "<=",
                                    "compare_to": 0.3
                                },
                                "action": {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:entity.warden.nearby_closest",
                                    "volume": 1.0
                                }
                            },
                            {
                                "condition": {
                                    "type": "origins:relative_health",
                                    "comparison": "<=",
                                    "compare_to": 0.55
                                },
                                "action": {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:entity.warden.nearby_closer",
                                    "volume": 0.8
                                }
                            },
                            {
                                "condition": {
                                    "type": "origins:relative_health",
                                    "comparison": "<=",
                                    "compare_to": 0.8
                                },
                                "action": {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:entity.warden.nearby_close",
                                    "volume": 0.6
                                }
                            }
                        ]
                    },
                    "weight": 40
                }
            ]
        }
    }
}
