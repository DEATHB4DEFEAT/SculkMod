{
    "name": "Sonic Boom",
    "description": "Let out a sonic boom to greatly damage whatever is in its path.",
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Activate with [Secondary]."
        }
    ],

    "type": "origins:active_self",
    "key": {
        "key": "key.origins.secondary_active"
    },
    "entity_action": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "playsound minecraft:entity.warden.sonic_charge block @a ~ ~ ~ 1"
            },
            {
                "type": "origins:delay",
                "ticks": 20,
                "action": {
                    "type": "origins:raycast",
                    "distance": 20,
                    "block": false,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:damage",
                                    "amount": 20,
                                    "source": {
                                        "name": "explosion",
                                        "bypasses_armor": true
                                    }
                                }
                            ]
                        }
                    },
                    "command_along_ray": "function death:sonic_boom"
                }
            }
        ]
    },
    
    "cooldown": 500,
    "hud_render": {
        "should_render": true,
        "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
        "bar_index": 17
    }
}